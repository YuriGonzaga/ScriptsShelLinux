#!/bin/bash

# Cores para mensagens de status
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${GREEN}âž¡ï¸ Instalando MOTD personalizado...${NC}"

# Caminho do novo MOTD
MOTD_PATH="/etc/update-motd.d/00-custom"

# Cria o conteÃºdo do MOTD
sudo tee "$MOTD_PATH" > /dev/null << 'EOF'
#!/bin/bash

# Cores ANSI
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[1;34m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${GREEN}ðŸ–¥ï¸  Bem-vindo ao servidor ${NC}"
echo

# InstalaÃ§Ã£o automÃ¡tica via GitHub
echo -e "${YELLOW}âš™ï¸ InstalaÃ§Ã£o automÃ¡tica de scripts:${NC}"
echo -e "    ${BLUE}bash <(curl -s https://raw.githubusercontent.com/YuriGonzaga/ScriptsShelLinux/main/install.sh)${NC}"
echo -e "    ${BLUE}wget -qO- https://raw.githubusercontent.com/YuriGonzaga/ScriptsShelLinux/main/install.sh | bash${NC}"

echo

# Tabela com Scripts e DescriÃ§Ãµes
echo -e "${BLUE}ðŸ”§ Scripts e DescriÃ§Ãµes:${NC}"
echo -e "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo -e "â•‘ ${GREEN}Script${NC}       â•‘ ${YELLOW}DescriÃ§Ã£o${NC}                              â•‘"
echo -e "â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£"
echo -e "â•‘ ${GREEN}SSHOnRoot${NC}    â•‘ ${YELLOW}Ativa o login SSH para o usuÃ¡rio root.${NC} â•‘"
echo -e "â•‘ ${GREEN}up${NC}           â•‘ ${YELLOW}Atualiza o sistema.${NC}                    â•‘"
echo -e "â•‘ ${GREEN}portainer${NC}    â•‘ ${YELLOW}Instala Docker e Portainer.${NC}            â•‘"
echo -e "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo

# IP da mÃ¡quina
IP=$(hostname -I | awk '{print $1}')
echo -e "${BLUE}ðŸŒ EndereÃ§o IP: ${YELLOW}$IP${NC}"

# Uptime
UPTIME=$(uptime -p)
echo -e "â±ï¸  Uptime: ${YELLOW}$UPTIME${NC}"
echo

# Verificando status dos serviÃ§os
echo -e "${BLUE}ðŸ” Verificando status dos serviÃ§os:${NC}"

# Docker
if systemctl is-active --quiet docker; then
  echo -e "  âœ… Docker: ${GREEN}Rodando${NC}"
else
  echo -e "  âŒ Docker: ${RED}Parado${NC}"
fi

# Portainer
if docker ps | grep -q portainer; then
  echo -e "  âœ… Portainer: ${GREEN}Rodando no Docker${NC}"
else
  echo -e "  âŒ Portainer: ${RED}NÃ£o encontrado no Docker${NC}"
fi

# SSH
if systemctl is-active --quiet ssh; then
  echo -e "  âœ… SSH: ${GREEN}Ativo${NC}"
else
  echo -e "  âŒ SSH: ${RED}Parado${NC}"
fi

# SSH root login
if grep -q "^PermitRootLogin yes" /etc/ssh/sshd_config; then
  echo -e "  ðŸ” SSH como root: ${GREEN}Permitido${NC}"
else
  echo -e "  ðŸ” SSH como root: ${RED}Bloqueado${NC}"
fi
echo

# Uso de recursos
echo -e "${BLUE}ðŸ“Š Uso de recursos:${NC}"

# CPU
cpu_load=$(top -bn1 | grep "load average:" | awk '{print $10 $11 $12}')
echo -e "  ðŸ§  Carga da CPU: ${YELLOW}$cpu_load${NC}"

# MemÃ³ria
mem_info=$(free -h | grep Mem)
mem_used=$(echo $mem_info | awk '{print $3}')
mem_total=$(echo $mem_info | awk '{print $2}')
echo -e "  ðŸ’¾ MemÃ³ria: ${YELLOW}$mem_used / $mem_total${NC}"

# Disco
disk_usage=$(df -h / | awk 'NR==2 {print $3 " / " $2 " (" $5 " usado)"}')
echo -e "  ðŸ—„ï¸  Disco raiz: ${YELLOW}$disk_usage${NC}"
EOF

# PermissÃ£o de execuÃ§Ã£o
sudo chmod +x "$MOTD_PATH"

# Opcional: remover outros MOTDs padrÃ£o
sudo rm -f /etc/update-motd.d/10-uname /etc/update-motd.d/00-header /etc/update-motd.d/80-livepatch 2>/dev/null

echo -e "${GREEN}âœ… MOTD personalizado instalado com sucesso!${NC}"
